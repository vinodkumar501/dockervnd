docker run -d -p 5000:50000 <image-name>    # image: static file
docker container ls                         # running env of image
docker container ls -a
docker container start <container state>    #  starting container from another exited container
docker container stop <cont-id>
docker container start <cont-id>
docker container logs <cont-id>

remove 1 stopped container
docker container rm <cont-id>

